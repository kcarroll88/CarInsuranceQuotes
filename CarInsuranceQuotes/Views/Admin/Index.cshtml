@using CarInsuranceQuotes.ViewModels
@model List<CarInsuranceQuotesVM>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Quotes</h5>
        </div>
        <div class="card-body">
            @foreach (var Customer in Model)
            {
                <input type="hidden" name="Id" value="@Customer.Id" />
                <div class="row mb-3">
                    <div class="col-2">
                        @Customer.FirstName
                    </div>
                    <div class="col">
                        @Customer.LastName
                    </div>
                    <div class="col-4">
                        @Customer.EmailAddress
                    </div>                        
                </div>                
            }
        </div>
    </div>
</div>